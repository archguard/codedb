{
  "name": "ArchGuard 3.0 - CodeDB",
  "config": {
    "plugin": {
      "registry": "https://plugins.archguard.org/"
    },
    "server": {
      "url": "http://localhost:8084"
    }
  },
  "jobs": {
    "backend": {
      "type": "org.archguard.runner.pipeline.CompositeActionExecutionJob",
      "name": "backend",
      "config": {
        "server": {},
        "displayName": "Backend",
        "languages": [
          "java",
          "kotlin"
        ],
        "features": [
          "datamap"
        ]
      },
      "steps": [
        {
          "uses": "actions/checkout@v3"
        },
        {
          "uses": "analyser/source-code@v1",
          "with": {
            "features": [
              "datamap"
            ]
          }
        },
        {
          "uses": "linter/database@v1"
        },
        {
          "uses": "analyser/coverage@v1"
        }
      ]
    },
    "frontend": {
      "type": "org.archguard.runner.pipeline.CompositeActionExecutionJob",
      "name": "frontend",
      "config": {
        "server": {},
        "displayName": "Frontend",
        "languages": [
          "javascript"
        ]
      },
      "steps": [
        {
          "uses": "actions/checkout@v3"
        },
        {
          "uses": "analyser/source-code@v1",
          "with": {
            "path": "frontend",
            "server": "${{ project.server.url }}",
            "features": [
              {
                "name": "datamap",
                "config": {
                  "languages": [
                    "javascript"
                  ]
                }
              }
            ],
            "project": "frontend"
          }
        }
      ]
    }
  }
}